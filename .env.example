# ============================================================================
# MedAdhere Pro - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# Flask Settings
# ============================================================================
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# ============================================================================
# Google Cloud Platform
# ============================================================================
# Your GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCP Region
GCP_LOCATION=us-central1

# ============================================================================
# MedGemma VM Configuration
# ============================================================================
# MedGemma VM URL (already deployed)
MEDGEMMA_VM_URL=http://136.116.155.46:8080

# MedGemma inference timeout (seconds)
MEDGEMMA_VM_TIMEOUT=120

# Model temperature (0.0 - 1.0)
MEDGEMMA_TEMPERATURE=0.7

# Max tokens for response
MEDGEMMA_MAX_TOKENS=512

# ============================================================================
# Firebase Configuration
# ============================================================================
# Path to Firebase service account credentials JSON file
FIREBASE_CREDENTIALS_PATH=path/to/your/firebase-credentials.json

# Firebase Realtime Database URL
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================================================
# Agent Configuration
# ============================================================================
# Maximum iterations for agent reasoning loops
AGENT_MAX_ITERATIONS=5

# Agent workflow timeout (seconds)
AGENT_TIMEOUT=300

# ============================================================================
# Logging
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/medadhere.log
